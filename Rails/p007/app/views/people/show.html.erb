<h1>人のやつ</h1>
<p><%= @msg %></p>

<table>
    <tr>
        <th>ID</th>
        <td><%= @data.id %></td>
    </tr>
    <tr>
        <th>名前</th>
        <td><%= @data.name %></td>
    </tr>
    <tr>
        <th>年齢</th>
        <td><%= @data.age %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @data.mail %></td>
    </tr>
    <tr>
        <th>発言</th>
        <td>
        <% if @data.message != nil %>
            <% @data.message.each do |o| %>
                <%= ('- ' + o.title + '<br>').html_safe %>
            <% end %>
        <% end %>
        </td>
    </tr>
</table>

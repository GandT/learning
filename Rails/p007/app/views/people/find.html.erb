<h1>人の検索</h1>
<p><%= @msg %></p>

<table>
    <%= form_tag(controller: "people", action: "find") do %>
    <tr>
        <th>検索</th>
        <td><%= text_field_tag("find") %></td>
    </tr>
    <tr>
        <th></th>
        <td><%= submit_tag("検索") %></td>
    </tr>
    <% end %>
</table>

<hr>

<table>
    <tr>
        <th>ID</th>
        <th>名前</th>
        <th>年齢</th>
        <th>メールアドレス</th>
    </tr>
    <% @people.each do |obj| %>
    <tr>
        <td><%= obj.id   %></td>
        <td><%= obj.name %></td>
        <td><%= obj.age  %></td>
        <td><%= obj.mail %></td>
    </tr>
    <% end %>
</table>
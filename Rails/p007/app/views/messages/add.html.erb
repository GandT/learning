<h1>発言の増やすやつ</h1>
<p><%= @msg %></p>

<% if @message.errors.any? %>
<!-- ul：unorderd list = 順不同リスト -->
<ul>
    <% @message.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>

<table>
    <%= form_for(@message, url:{controller: 'messages', action: 'create'}) do |form| %>
    <tr>
        <th>ID</th>
        <td><%= form.text_field :person_id %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= form.text_field :title %></td>
    </tr>
    <tr>
        <th>本文</th>
        <td><%= form.text_area :message, {cols:30, rows:3} %></td>
    </tr>
    <tr>
        <th></th>
        <td><%= form.submit "送信" %></td>
    </tr>
    <% end %>
</table>
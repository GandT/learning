<h1>記事作成</h1>
<p>新しい記事を作成します。</p>

<!-- エラーメッセージ -->
<% if @blogpost.errors.any? %>
    <ul>
    <% @blogpost.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
    </ul>
<% end %>

<table>
    <%= form_for(@blogpost, url:{controller:"blogposts", action:"add"}) do |form| %>
    <tr>
        <th>タイトル</th>
        <td><%= form.text_field :title %></td>
    </tr>
    <tr>
        <th>導入</th>
        <td><%= form.text_field :read %></td>
    </tr>
    <tr>
        <th>本文</th>
        <td><%= form.text_area :content, {cols:40, rows:10} %></td>
    </tr>
    <tr>
        <th>ジャンル</th>
        <td><%= form.text_field :bloggenre_id %></td>
    </tr>
   <tr>
        <th></th>
        <td><%= form.submit "送信" %></td>
    </tr>
    <% end %>
</table>

<hr>

<p>ジャンル一覧</p>
<table>
    <tr>
        <th>ID</th>
        <th>ジャンル</th>
    </tr>
    <% @genre.each do |obj| %>
    <tr>
        <td><%= obj.id %></td>
        <td><%= obj.name %></td>
    </tr>
    <% end %>
</table>
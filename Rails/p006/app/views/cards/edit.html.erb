<h1>読書カード＃編集</h1>
<p>『<%= @card.title %>』のデータの編集</p>

<table>
    <!-- フォーム情報逐次編集 -->
    <%= form_for(@card, url:{controller:'cards', action:'edit', id:@card.id}) do |f| %>
        <tr>
            <th>題名</th>
            <td><%= f.text_field :title, {size:40} %></td>
        </tr>
        <tr>
            <th>著者</th>
            <td><%= f.text_field :author, {size:40} %></td>
        </tr>
        <tr>
            <th>出版社</th>
            <td><%= f.text_field :publisher, {size:40} %></td>
        </tr>
        <tr>
            <th>評価（1～5）</th>
            <td><%= f.number_field :star, {size:40} %></td>
        </tr>
        <tr>
            <th>コメント</th>
            <td><%= f.text_area :memo, {cols:40, rows:10} %></td>
        </tr>
        <tr>
            <th></th>
            <td><%= f.submit "更新" %></td>
        </tr>
    <% end %>
</table>
<h1>読書カード＃追加</h1>
<p>登録情報を入力してください。</p>

<table>
    <!-- フォーム情報逐次登録 -->
    <%= form_for(@card, url:{controller:'cards', action:'add'}) do |f| %>
        <tr>
            <th>題名</th>
            <td><%= f.text_field :title, {size:40} %></td>
        </tr>
        <tr>
            <th>著者</th>
            <td><%= f.text_field :author, {size:40} %></td>
        </tr>
        <tr>
            <th>出版社</th>
            <td><%= f.text_field :publisher, {size:40} %></td>
        </tr>
        <tr>
            <th>評価（1～5）</th>
            <td><%= f.number_field :star, {size:40} %></td>
        </tr>
        <tr>
            <th>コメント</th>
            <td><%= f.text_area :memo, {cols:40, rows:10} %></td>
        </tr>
        <tr>
            <th></th>
            <td><%= f.submit "保存" %></td>
        </tr>
    <% end %>
</talbe>

<p class="link"><a href="/cards">&lt;&lt; トップページに戻る</p>
